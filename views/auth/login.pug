extends ../layouts/common
block content
    h3.mt-4 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form( method="POST")
        .form-group
            label.mt-3(for="email") Email
            input#email.form-control(type="email", name="email", value=values ? values.email : "" placeholder='admin@gmail.com')
        .form-group
            label.mt-3(for="password") Password
            input#password.form-control(type="password", name="password" value=values ? values.password : '' placeholder="123")
        button.mt-3.btn.btn-primary Login
